<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Product Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h1 class="text-center mb-4">Product Management System</h1>

    <form action="/api/products" method="POST" class="card p-4 mb-4">
      <div class="row g-3">
        <div class="col-md-2"><input name="ProductCode" class="form-control" placeholder="Code" required></div>
        <div class="col-md-2"><input name="ProductName" class="form-control" placeholder="Name" required></div>
        <div class="col-md-2"><input name="ProductDate" type="date" class="form-control" required></div>
        <div class="col-md-2"><input name="ProductOriginPrice" type="number" class="form-control" placeholder="Price" required></div>
        <div class="col-md-2"><input name="Quantity" type="number" class="form-control" placeholder="Qty" required></div>
        <div class="col-md-2"><input name="ProductStoreCode" class="form-control" placeholder="Store" required></div>
      </div>
      <div class="mt-3 text-end">
        <button class="btn btn-success">Add Product</button>
      </div>
    </form>

    <table class="table table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Code</th>
          <th>Name</th>
          <th>Date</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Store</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(p => { %>
          <tr>
            <td><%= p.ProductCode %></td>
            <td><%= p.ProductName %></td>
            <td><%= p.ProductDate %></td>
            <td><%= p.ProductOriginPrice.toLocaleString() %></td>
            <td><%= p.Quantity %></td>
            <td><%= p.ProductStoreCode %></td>
            <td>
              <form action="/api/products/delete/<%= p._id %>" method="POST" onsubmit="return confirm('Delete this product?')">
                <button class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
